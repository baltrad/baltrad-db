Import("env")

sources = [
    "exceptions.cpp",
    "hlhdf.cpp",
    "AttributeMapper.cpp",
    "AttributeSpecs.cpp",
    "Converter.cpp",
    "DefaultFileNamer.cpp",
    "FileCatalog.cpp",
    "Query.cpp",
    "RelationalDatabase.cpp",
    "RelationalResultSet.cpp",
    "ResultSet.cpp",
    "Source.cpp",
    "TestRDB.cpp",
    "TestSwig.cpp",
    "Variant.cpp",
    "expr/AttrReplace.cpp",
    "expr/Compiler.cpp",
    "expr/Expression.cpp",
    "expr/Factory.cpp",
    "expr/FromClause.cpp",
    "expr/Join.cpp",
    "expr/Select.cpp",
    "expr/Selectable.cpp",
    "expr/Visitor.cpp",
    "oh5/Attribute.cpp",
    "oh5/AttributeGroup.cpp",
    "oh5/Group.cpp",
    "oh5/File.cpp",
    "oh5/FileLoader.cpp",
    "oh5/Node.cpp",
    "oh5/Root.cpp",
]

confdeps = env.ConfHas("#shared-library-confdeps",
                       ["qt", "qtsql", "hlhdf", "boost"])

objects = env.SharedObject(sources)
env.Requires(objects, confdeps)

lib = env.SharedLibrary("#lib/brfc", objects, LIBS=["hdf5", "hlhdf", "QtSql"])

env.Alias("shared-library", lib)

env.Install("${install_root}/lib", lib)

