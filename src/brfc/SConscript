Import("env")

sources = [
    "exceptions.cpp",
    "smart_ptr.cpp",
    "Date.cpp",
    "DefaultFileNamer.cpp",
    "FileCatalog.cpp",
    "FileNamer.cpp",
    "Path.cpp",
    "Query.cpp",
    "ResultSet.cpp",
    "String.cpp",
    "StringList.cpp",
    "SHA1AttributeHasher.cpp",
    "Time.cpp",
    "Variant.cpp",
    "expr/Expression.cpp",
    "expr/Factory.cpp",
    "oh5/hlhdf.cpp",
    "oh5/Attribute.cpp",
    "oh5/AttributeGroup.cpp",
    "oh5/AttributeSpecs.cpp",
    "oh5/Converter.cpp",
    "oh5/Group.cpp",
    "oh5/File.cpp",
    "oh5/FileLoader.cpp",
    "oh5/DataGroup.cpp",
    "oh5/DataSet.cpp",
    "oh5/DataSetGroup.cpp",
    "oh5/QualityGroup.cpp",
    "oh5/Node.cpp",
    "oh5/RootGroup.cpp",
    "oh5/Source.cpp",
    "oh5/SplitPath.cpp",
    "oh5/SourceCentre.cpp",
    "oh5/SourceRadar.cpp",
    "rdb/AttributeMapper.cpp",
    "rdb/BindMap.cpp",
    "rdb/Compiler.cpp",
    "rdb/Connection.cpp",
    "rdb/FromClause.cpp",
    "rdb/GroupIdCache.cpp",
    "rdb/SaveAttribute.cpp",
    "rdb/SaveGroup.cpp",
    "rdb/SaveFile.cpp",
    "rdb/Join.cpp",
    "rdb/PostgresConnection.cpp",
    "rdb/PostgresResultSet.cpp",
    "rdb/QueryToSelect.cpp",
    "rdb/RelationalDatabase.cpp",
    "rdb/SqlQuery.cpp",
    "rdb/Select.cpp",
    "rdb/Selectable.cpp",
    "test/TempDir.cpp",
    "test/TempH5File.cpp",
    "test/TestRDB.cpp",
    "test/TestSwig.cpp",
]

confdeps = env.ConfHas("#shared-library-confdeps",
                       ["qt", "hlhdf", "boost"])

objects = env.SharedObject(sources)
env.Requires(objects, confdeps)

lib = env.SharedLibrary("#lib/brfc", objects, LIBS=["hdf5", "hlhdf", "QtSql", "pqxx"])

env.Alias("shared-library", lib)

env.Install("${install_root}/lib", lib)

